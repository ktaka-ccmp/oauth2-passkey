                    <div class="item-detail created-row">
                        <span><strong>Created:</strong> {{ account.created_at }}</span>
                        <button onclick="unlinkOAuth2Account('{{ account.provider }}', '{{ account.provider_user_id }}')" class="delete-button">Unlink</button>
