        .link-button:hover {
            background-color: #3367d6;
        }
        .back-link {
            display: inline-block;
            margin-top: 20px;
            color: #4285f4;
            text-decoration: none;
        }
        .back-link:hover {
            text-decoration: underline;
        }
        .user-passkeys {
            margin-top: 0.5rem;
        }
        .user-accounts {
            margin-top: 0.5rem;
        }
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 10px;
        }
        .page-header h1 {
            margin: 0;
        }
        .section-header {
